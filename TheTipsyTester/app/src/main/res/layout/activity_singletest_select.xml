<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thetipsytester.thetipsytester.singleTestSelectActivity">

    <TextView
        android:id="@+id/singleTestTitle"
        android:text="Tests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/balanceSingleTestButton"
                android:text="Balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:onClick="startBalance"/>
            <Button
                android:id="@+id/patternSingleTestButton"
                android:text="Pattern Match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:onClick="startPattern"/>
            <Button
                android:id="@+id/typingSingleTestButton"
                android:text="Typing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:onClick="startTyping"/>

        </LinearLayout>






    </ScrollView>

</LinearLayout>